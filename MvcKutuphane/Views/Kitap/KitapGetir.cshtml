@model MvcKutuphane.Models.Entity.TBLKİTAP
@{
    {
        ViewBag.Title = "KitapGetir";
        Layout = "~/Views/Shared/Layout.cshtml";
    }
        }
    <h2>KitapGetir</h2>
     
    @using (Html.BeginForm("KitapGüncelle", "Kitap", FormMethod.Post))
    {
        <div class="form-group">
            <div style="margin-bottom:15px">
                <label>Kitap ID</label>
                @Html.TextBoxFor(k => k.ID, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Kitap Adı</label>
                @Html.TextBoxFor(k => k.AD, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Kategori</label>
                 @Html.DropDownListFor(k => k.TBLKategori.ID, (List<SelectListItem>)ViewBag.dgr1,
                 new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Yazarı</label>
                @Html.DropDownListFor(k => k.TBLyazar.ID, (List<SelectListItem>)ViewBag.dgr2,
new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Basım Yılı</label>
                @Html.TextBoxFor(k => k.BASIMYIL, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Yayın Evi</label>
                @Html.TextBoxFor(k => k.YAYINEVİ, new { @class = "form-control" })
            </div>
            <div style="margin-bottom:15px">
                <label>Sayfa Sayısı</label>
                @Html.TextBoxFor(k => k.SAYFA, new { @class = "form-control" })
            </div>
           

            <button class="btn btn-warning">Kitap Bilgilerini güncelle</button>
        </div>
    }
